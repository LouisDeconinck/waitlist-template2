{
  "name": "waitlist-template2",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.6",
  "scripts": {
    "dev": "astro dev",
    "dev:full": "astro build && wrangler dev",
    "dev:worker": "wrangler dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "typegen": "wrangler types",
    "check": "astro check && tsc --noEmit --project tsconfig.worker.json",
    "db:migrate:local": "wrangler d1 migrations apply DB --local",
    "db:migrate:remote": "wrangler d1 migrations apply DB --remote",
    "deploy": "wrangler d1 migrations apply DB --remote && wrangler deploy"
  },
  "cloudflare": {
    "bindings": {
      "DB": {
        "description": "D1 database for waitlist entries and metadata."
      },
      "WAITLIST_RATE_LIMIT_PER_DAY": {
        "description": "Maximum signups accepted per UTC day for each IP address (default: 10)."
      }
    }
  },
  "dependencies": {
    "@astrojs/react": "^4.4.2",
    "@tabler/icons": "^3.37.1",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/vite": "^4.2.1",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "astro": "^5.17.1",
    "hono": "^4.12.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.5.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.2.1",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "typescript": "^5.9.3",
    "wrangler": "^4.68.1"
  }
}
